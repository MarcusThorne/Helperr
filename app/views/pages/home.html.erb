<!-- parallax banner with search bar in the middle and text -->
<div class="search parallax-window d-flex justify-content-center" data-parallax="scroll" data-image-src="/assets/tools.jpg">
  <div class="rounded m-auto text-center">
    <div class="m-4">
      <h5 class="text-light parallax-text-small mb-3">Saving time and money</h5>
      <p class="underline mx-auto mb-4"></p>
      <h1 class="text-light fw-light mb-5 parallax-text-big">FIND A HELPERR</h1>
    </div>
    <form class="search-bar">
      <input class="form-control mr-5" name="query" type="search" aria-label="Search" placeholder="Find a helperr...">
      <button class="btn btn-primary text-light btn-outline-secondary" type="button" id="button-addon2">Search</button>
    </form>
  </div>
</div>

<!-- Instructions on how to use the website, in steps -->
<div class="bg-light d-flex justify-content-center">
  <div class="instructions text-center container py-2 px-4 mt-n5">
    <% @instructions.each_with_index do |instruction, index| %>
      <div class="instruction">
        <div class="icon <%= instruction.downcase.delete(' &') %>"></div>
        <p><%= instruction %></p>
        <p class="step">Step <%= index + 1 %>.</p>
      </div>
    <% end %>
  </div>
</div>

<!-- Carousel of popular users at current time, Created using slick -->
<div class="carousel">
  <i class="fas fa-chevron-left prev prev-next"></i>
  <i class="fas fa-chevron-right next prev-next"></i>
  <h5 class="title container fs-2 my-n1">Featured Helperrs</h5>
  <div class="carousel-wraper py-5">
    <% @professions.each do |p| %>
      <div class="card mx-3 featured-card">
        <img src="/assets/professions/<%= p.title.downcase.delete(' ') %>.jpg" alt="" class="card-img-top card-image">
        <div class="card-body">
          <h5 class="card-title"><%= p.title %></h5>
          <p class="body-text"><%= p.price %></p>
        </div>
      </div>
    <% end %>
  </div>
</div>

<!-- Professions list -->
<div class="container-fluid bg-white professions">
  <div class="container">
    <h4 class="title text-primary text-center fs-2 fw-normal">Popular Professions</h4>
    <p class="professions-subtitle text-center fs-5">Take a look through our most popular jobs</p>
    <p class="underline mx-auto mb-5"></p>
    <div class="row justify-content-around profession">
      <% @professions.each do |p| %>
        <div class="card m-3 p-0 profession-card">
          <img src="/assets/professions/<%= p.title.downcase.delete(' ') %>.jpg" alt="" class="card-img-top card-image">
          <div class="card-body">
            <h5 class="card-title"><%= p.title %></h5>
            <p class="body-text"><%= p.price %></p>
          </div>
        </div>
      <% end %>
    </div>
    <i class="fas fa-chevron-down text-center container d-flex justify-content-around mt-4"></i>
  </div>
</div>



